package com.example.iwawka.utils

import com.example.iwawka.utils.state.StateTransformer
import com.example.iwawka.utils.state.andThen

fun combineT(vararg transformers: StateTransformer): StateTransformer = {
    transformers.fold({it}, {acc, function -> acc andThen function})
}

infix fun <A, B> A.pipe(f: (A) -> B): B = f(this)
