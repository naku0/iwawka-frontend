package com.example.iwawka.ui.viewmodel

import androidx.lifecycle.ViewModel
import androidx.lifecycle.viewModelScope
import kotlinx.coroutines.flow.MutableStateFlow
import kotlinx.coroutines.flow.StateFlow
import kotlinx.coroutines.flow.asStateFlow
import kotlinx.coroutines.launch
import com.example.iwawka.ui.states.*
import kotlinx.coroutines.flow.update

class MainViewModel : ViewModel() {
    private val reducer = MainReducer()
    private val _state = MutableStateFlow(MainState())
    val state: StateFlow<MainState> = _state.asStateFlow()

    // Эта функция вызывается из UI когда что-то происходит
    fun dispatch(action: MainAction) {
        _state.update { currentState ->
            reducer.reduce(currentState, action)
        }
    }

    // Пример загрузки данных
    fun loadMessages() {
        viewModelScope.launch {
            dispatch(MainAction.LoadMessages)
            // Здесь будет вызов API или БД
            // dispatch(MainAction.MessagesLoaded(messages))
        }
    }
}